{% props timeEntry %}

<div{{ attributes }}>
    {# show start, ?end, note and category #}
    <div>
        <span>🕒 {{ timeEntry.startTime|date('Y-m-d H:i') }}
        {% if timeEntry.endTime %}
            <span>🕘 {{ timeEntry.endTime|date('Y-m-d H:i') }}</span>
        {% else %}
            <span>🕘 N/A</span>
        {% endif %}
        <span>📝 {{ timeEntry.note|default('No notes') }}</span>
        <span>🏷️ {{ timeEntry.billingCategory.name }}</span>
    </div>
</div>
