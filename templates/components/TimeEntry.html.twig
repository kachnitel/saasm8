{% props timeEntry %}

<div{{ attributes.defaults({ class: 'timeEntry' }) }}>
  <span
    class="duration"
    title="🕒 {{ timeEntry.startTime|date('H:i:s') }} - {{ timeEntry.endTime|date('H:i:s') }}"
  >🕒 {{ timeEntry.durationInSeconds }}s</span>

  <span
    class="billingCategory"
    style="background-color: {{ timeEntry.billingCategory.color }}"
    {# data-color="{{ timeEntry.billingCategory.color }}" #}
  >🏷️ {{ timeEntry.billingCategory.name }}</span>

  {% if timeEntry.note %}
    <span class="note" title="{{ timeEntry.note }}">📝</span>
  {% endif %}
</div>
